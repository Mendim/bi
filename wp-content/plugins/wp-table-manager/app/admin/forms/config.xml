<?xml version="1.0" encoding="UTF-8"?>
<form class="wptmparams" method="POST" action="admin.php?page=wptm-config&amp;task=config.saveconfig">
       
    <input 
        name="enable_import_excel"
        type="select"
        label="Enable import/export Excel"
        value="1"
        class="inputbox input-block-level"
        required="true"
    >
        <option value="1">Yes</option>
        <option value="0">No</option>
    </input>   
    <input 
        name="export_excel_format"
        type="select"
        label="Export file format"
        value="xlsx"
        class="inputbox input-block-level"
        required="true"
    >        
        <option value="xls">Excel 2003</option>
        <option value="xlsx">Excel 2007</option>
    </input>
   
    <input 
        name="enable_tooltip"
        type="select"
        label="Enable Tooltip"
        value="0"
        class="inputbox input-block-level"
        required="true"
    >        
        <option value="0">No</option>
        <option value="1">Yes</option>
    </input>     
    
    <input 
        name="enable_autosave"
        type="select"
        label="Enable auto save"
        value="1"
        class="inputbox input-block-level"
        required="true"
    >   
        <option value="1">Yes</option>     
        <option value="0">No</option>        
    </input>  
    
    <input 
        name="sync_periodicity"
        type="select"
        label="File sync periodicity"
        value="0"
        class="inputbox input-block-level"
        required="true"
    >   
        <option value="0">No</option>
        <option value="1">1 hour</option>
        <option value="12">12 hours</option>
        <option value="24">24 hours</option>
    </input>
    
    <input 
        name="enable_frontend"
        type="select"
        label="Load the plugin on frontend"
        tooltip="Load the plugin in page builder on frontend"
        value="0"
        class="inputbox input-block-level"
        required="true"
    >        
        <option value="0">No</option>
        <option value="1">Yes</option>
    </input>

    <input class="input-block-level" name="last_sync" value="" type="text" hidden="true" />

    <input
            name="alternate_color"
            type="config"
            label="Rebuild the alternate color"
            tooltip="Rebuild the alternate color list for tables"
            value=""
            class="inputbox input-block-level"
            namespace="\Joomunited\WP_Table_Manager\Admin\Fields\"
    />

    <input
        name="enable_hightlight"
        type="select"
        label="Cell highlightning"
        tooltip="Activate a color on cell mouse over to see on a first sight a cell content"
        value="0"
        class="inputbox input-block-level"
        required="true"
    >
        <option value="0">No</option>
        <option value="1">Yes</option>

    </input>
    <input
            name="tree_hightlight_color"
            type="text"
            label="Highlight background color"
            value="#76bc58"
            class="inputbox input-block-level wp-color-field"
    />
    <input
            name="tree_hightlight_font_color"
            type="text"
            label="Highlight font color"
            value="#ffffff"
            class="inputbox input-block-level wp-color-field"
    />
    <input
            name="hightlight_opacity"
            type="text"
            label="Highlightning opacity "
            value="0.9"
            class="inputbox input-block-level"
    />
    <input
            name="date_formats"
            type="text"
            label="Date formats"
            value="Y-m-d"
            class="inputbox input-block-level date_formats"
    />
    <input
            name="symbol_position"
            type="select"
            label="Symbol position"
            value="0"
            class="inputbox input-block-level"
    >
        <option value="0">Before</option>
        <option value="1">After</option>
    </input>
    <input
            name="currency_sym"
            type="text"
            label="Currency symbol(s)"
            value="$"
            class="inputbox input-block-level"
    />
    <input
            name="decimal_sym"
            type="text"
            label="Decimal symbol"
            value="."
            class="inputbox input-block-level"
    />
    <input
            name="decimal_count"
            type="text"
            label="Decimal count"
            value="0"
            class="inputbox input-block-level"
    />
    <input
            name="thousand_sym"
            type="text"
            label="Thousand symbol"
            value=","
            class="inputbox input-block-level"
    />
    <button
        type="submit"
        value="Save settings"
        class="button"
    />
</form>
